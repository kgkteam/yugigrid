{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"]
  },
  "include": ["**/*.ts", "**/*.tsx", "netlify/functions/**/*.js"],
  "exclude": ["node_modules", "dist", ".netlify"]
}
